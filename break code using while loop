package com.company;

public class cwp_24_break_and_continue {
    public static void main(String[] args) {
        int i = 0;
        while(i<5) {
            System.out.println(i);
            System.out.println("java is great");
            if (i == 2) {
                System.out.println("ending the loop");
                break;
            }
            i++;
        }
            System.out.println("loop ends here");
    }
}
